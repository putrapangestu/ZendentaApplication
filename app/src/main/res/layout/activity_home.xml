<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1c90fc"
    tools:context=".View.Home">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/gambar_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/tambahKunjungan"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="12dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/icon_plus"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/logo"
                    android:layout_marginStart="50dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Zendenta"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="left|center"
                    android:layout_marginStart="5dp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <ImageView
            android:id="@+id/logout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_keluar"
            android:layout_marginStart="15dp"
            android:layout_marginTop="9dp"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:cardBackgroundColor="#f7f8fa"
        app:cardCornerRadius="50dp"
        android:layout_marginBottom="-40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="KUNJUNGAN BERIKUTNYA"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/tanggal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="21 Oktober 2022"
                android:textSize="15dp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="20dp"/>
            
            <androidx.cardview.widget.CardView
                android:id="@+id/cardKunjungan"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/tes_foto"/>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="220dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/dokter"
                            android:layout_width="198dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif-medium"
                            android:maxLines="2"
                            android:text="drg.Nunuk Setiyawan, Sp.BM"
                            android:textColor="@color/black"
                            android:textSize="18dp" />
                        <TextView
                            android:id="@+id/metode"
                            android:layout_width="198dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="15dp"
                            android:text="Pemutihan gigi "/>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnSelengkapnya"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#1c90fc">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="LIHAT SELENGKAPNYA"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"/>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/white"
            android:layout_gravity="bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/homePage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/navbar_home"
                android:layout_marginStart="45dp"/>
            <ImageView
                android:id="@+id/kunjunganPage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/navbar_hospital"
                android:layout_marginStart="45dp"/>
            <ImageView
                android:id="@+id/historyPage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/navbar_history"
                android:layout_marginStart="45dp"/>
            <ImageView
                android:id="@+id/profilePage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/navbar_person"
                android:layout_marginStart="45dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>